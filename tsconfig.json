{
  "compilerOptions": {
    "target": "es2016",   
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "module": "commonjs",                                
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"]
    }                             
  }
}
